#include <BLEDevice.h>
#include <BLEServer.h>
#include <BLEUtils.h>
#include <BLE2902.h>

// Định nghĩa UUID cho service và characteristics
#define SERVICE_UUID        "4fafc201-1fb5-459e-8fcc-c5c9c331914b"
#define SENSOR_CHAR_UUID    "beb5483e-36e1-4688-b7f5-ea07361b26a8"
#define LED_CHAR_UUID       "8ec90002-f315-4f60-9fb8-838830daea50"

BLECharacteristic *sensorCharacteristic;
BLECharacteristic *ledCharacteristic;
bool deviceConnected = false;
int ledPin = 2;

// Callback xử lý kết nối
class MyServerCallbacks: public BLEServerCallbacks {
    void onConnect(BLEServer* pServer) {
      deviceConnected = true;
      Serial.println("Thiết bị đã kết nối");
    };
    
    void onDisconnect(BLEServer* pServer) {
      deviceConnected = false;
      Serial.println("Thiết bị đã ngắt kết nối");
      BLEDevice::startAdvertising();
    }
};

// Callback xử lý ghi LED characteristic
class MyCallbacks: public BLECharacteristicCallbacks {
    void onWrite(BLECharacteristic *pCharacteristic) {
      std::string value = pCharacteristic->getValue();
      if (value.length() > 0) {
        if (value[0] == '1') {
          digitalWrite(ledPin, HIGH);
          Serial.println("LED BẬT");
        } else {
          digitalWrite(ledPin, LOW);
          Serial.println("LED TẮT");
        }
      }
    }
};

void setup() {
  Serial.begin(115200);
  pinMode(ledPin, OUTPUT);
  
  // Khởi tạo BLE
  BLEDevice::init("ESP32_BLE");
  
  // Tạo BLE Server
  BLEServer *pServer = BLEDevice::createServer();
  pServer->setCallbacks(new MyServerCallbacks());
  
  // Tạo BLE Service
  BLEService *pService = pServer->createService(SERVICE_UUID);
  
  // Tạo Sensor Characteristic (đọc)
  sensorCharacteristic = pService->createCharacteristic(
                         SENSOR_CHAR_UUID,
                         BLECharacteristic::PROPERTY_READ |
                         BLECharacteristic::PROPERTY_NOTIFY
                       );
  sensorCharacteristic->addDescriptor(new BLE2902());
  
  // Tạo LED Characteristic (ghi)
  ledCharacteristic = pService->createCharacteristic(
                      LED_CHAR_UUID,
                      BLECharacteristic::PROPERTY_WRITE
                    );
  ledCharacteristic->setCallbacks(new MyCallbacks());
  
  // Bắt đầu service
  pService->start();
  
  // Bắt đầu quảng bá
  BLEAdvertising *pAdvertising = BLEDevice::getAdvertising();
  pAdvertising->addServiceUUID(SERVICE_UUID);
  pAdvertising->setScanResponse(true);
  BLEDevice::startAdvertising();
  
  Serial.println("BLE Server đã sẵn sàng!");
}

void loop() {
  if (deviceConnected) {
    // Cập nhật giá trị cảm biến giả lập
    int sensorValue = random(20, 30);
    String value = String(sensorValue) + "°C";
    sensorCharacteristic->setValue(value.c_str());
    sensorCharacteristic->notify();
    delay(2000);
  }
}
